<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingEnd="@dimen/question_padding_hor"
    android:paddingStart="@dimen/question_padding_hor">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/question_padding_vert"
        android:layout_marginTop="@dimen/question_padding_vert">

        <TextView
            android:id="@+id/questionTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/question_padding_hor"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            tools:text="Where did the pineapple plant originate?" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/question_padding_vert"
        android:layout_marginTop="@dimen/question_padding_vert">

        <RadioGroup
            android:id="@+id/questionGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@android:color/darker_gray"
            android:orientation="vertical"
            android:showDividers="middle" />

    </android.support.v7.widget.CardView>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dip"
        android:layout_weight="1" />

    <Button
        android:id="@+id/questionBtnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        tools:text="Next" />

</LinearLayout>