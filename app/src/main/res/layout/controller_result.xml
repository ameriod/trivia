<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/resultRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/recycler_button_bottom_padding" />

    <Button
        android:id="@+id/resultBtnDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/result_padding_vert"
        android:layout_marginEnd="@dimen/result_padding_hor"
        android:layout_marginStart="@dimen/result_padding_hor"
        android:layout_marginTop="@dimen/result_padding_vert"
        android:text="@string/result_btn_done" />
</FrameLayout>