<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ResultItem"
    android:layout_width="match_parent"
    android:layout_height="@dimen/result_chart_height"
    android:orientation="vertical">

    <TextView
        android:id="@+id/resultItemTvResults"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Text.Large"
        tools:text="@string/result_title" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/resultItemPieChart"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>